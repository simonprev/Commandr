%h1 Se connecter
%form{:action=>"/login", :method=>"post", :id=>"login", :class=>"formulaire"}
  - if @erreur
    .erreur #{@erreur}
  %p
    %label{:for=>"username"} Username:
    %input{:type => "text", :name => "username", :id=>"username"}
  %p 
    %label{:for=>"password"} Mot de passe:
    %input{:type => "password", :name => "password", :id=>"password"}

  %p 
    %input{:type => "submit", :value => "Se Connecter", :id => "btnConnexion", :class=>"bouton mauve"}


