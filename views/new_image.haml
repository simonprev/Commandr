%div
  %h1 Upload
- if @work
  - @work.errors.each do |e|
    #{e}
    %br

%form{:action=>"/new_image",:method=>"post",:enctype=>"multipart/form-data"}
  %p
    %label{:for=>"name"} Titre:
    %input{:type => "text", :name => "work_title",:value=>"#{@work.titre if @work}"}
  %p
    %label{:for=>"name"} Description:
    %br
    %textarea{:name => "work_desc", :rows => "10"}
      #{@work.desc if @work}
  %p
    %input{:type=>"file",:name=>"file"}
  %input{:type=>"submit",:value=>"Upload"}

